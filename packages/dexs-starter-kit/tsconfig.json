{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "declaration": true,
    "declarationDir": "dist"
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules/**/*"],
  "include": [
    "core/*.ts",
    "use-cases/**/*.ts",
    "use-cases/index.ts",
    "contracts/*.ts",
    "contracts/**/*.ts",
    "contracts/**/**/*.ts",
    "contracts/**/**/**/*.ts",
    "contracts/**/**/**/**/*.ts"
  ],
  "typedocOptions": {
    "entryPoints": ["core", "use-cases"],
    "out": "docs/typedoc"
  }
}
